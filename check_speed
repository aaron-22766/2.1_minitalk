
///////////////////////////////////////////////////////////////
#include <stdio.h>
#include <sys/time.h>
struct timeval  tv1, tv2;
///////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////
	gettimeofday(&tv1, NULL);
	///////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////
	gettimeofday(&tv2, NULL);
	printf ("%f seconds\n", (double) (tv2.tv_usec - tv1.tv_usec) / 1000000 + (double) (tv2.tv_sec - tv1.tv_sec));
	///////////////////////////////////////////////////////////////